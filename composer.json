{
    "name": "imangas/oauth",
    "description": "An Slim+Oauth+Jwt template",
    "type": "project",
    "require": {
        "php": "^7.1",
        "doctrine/dbal": "^2.8",
        "slim/slim": "^3.11",
        "bshaffer/oauth2-server-php": "^1.10"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "phpunit/phpunit": "^7.4",
        "mockery/mockery": "^1.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Ignacio Mangas",
            "email": "ignaciomangas@gmail.com"
        }
    ],
    "config": {
